<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Splitwise_HomeActivity">

    <RelativeLayout
        android:id="@+id/rlToolbarHomeScreen"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/background_green">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_show_more_button_with_three_dots" />

        <ImageView
            android:id="@+id/ivMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:src="@drawable/ic_menu__1_" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/ivMenu"
            android:text="Splitwise"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold" />


    </RelativeLayout>

<com.google.android.material.tabs.TabLayout
    android:id="@+id/tabLayoutFragmentFriends"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:tabMode="fixed"
    app:tabGravity="fill"
    app:tabIndicatorColor="@android:color/white"
    android:background="@color/background_green"
    app:tabTextColor="@android:color/white"
    app:tabSelectedTextColor="@color/white"
    android:minHeight="?attr/actionBarSize" />


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPagerFragmentFriends"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>