<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_green"
    tools:context=".Fragment_3">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_300"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/dp_20"
        android:src="@drawable/settle" />
    <TextView
        android:id="@+id/tv_settle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_expssum"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/dp_75"
        android:layout_marginEnd="@dimen/dp_75"
        android:layout_marginTop="450dp"
        android:layout_marginBottom="@dimen/dp_20"
        android:text="Settle up"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_20"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/tv_expssum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/dp_75"
        android:layout_marginEnd="@dimen/dp_75"
        android:layout_marginBottom="@dimen/dp_100"
        android:text="Pay your friends back any time"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="18sp" />
</RelativeLayout>